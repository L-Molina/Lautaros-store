{% if section.blocks.size > 1 %}
	{% for block in section.blocks %}
		<div class="swiper-slide">
			<div class="text-link-wrapper">
				<h3 class="slide-subtitle">
					{{ block.settings.subtitle }}
				</h3>
				<h1 class="slide-title">
					{{ block.settings.title }}
				</h1>
			</div>
			{{ block.settings.image | image_url: width: 1440 | image_tag: width: 1440 }}
		</div>
	{% endfor %}
{% endif %}

{% schema %}
{
  "name": "main-slider",
  "blocks": [
    {
      "name": "slider-image",
			"type": "slide",
			"limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
					"label": "image"
        },
				{
					"type": "text",
					"id": "title",
					"label": "title",
					"default": "Titulo"
				},
				{
					"type": "text",
					"id": "subtitle",
					"label": "subtitle",
					"default": "Subtitulo"
				}
      ]
    }
  ],
	"presets": [
    {
      "name": "Slideshow",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}