<script type="module">
	const swiper = new Swiper('.swiper', {
  direction: 'horizontal',
  loop: true,
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },
});
</script>
<div class="swiper">
	{% if section.blocks.size > 1 %}
		<div class="main-slider swiper-wrapper">
			{% for block in section.blocks %}
				<div class="swiper-slide">
					<div class="text-link-wrapper">
						<p class="slide-subtitle">
							{{ block.settings.subtitle }}
						</p>
						<p class="slide-title">
							{{ block.settings.title }}
						</p>
						<p class="slide-description">
							{{ block.settings.description }}
						</p>
						<div class="slide-link">
							<a href="{{ block.settings.link }}" class="link-text">
								{{ block.settings.button }}
							</a>
						</div>
					</div>
					<div class="arrow-wrapper">
						<span class="swiper-button-prev">
						</span>
						<span class="swiper-button-next">
						</span>
					</div>
					<div class="page-wrapper">
						{% for block in section.blocks %}
							<span class="bar swiper-pagination"></span>
						{% endfor %}
					</div>
					<div class="image-wrapper">
						{{ block.settings.image | image_url: width: 1440 | image_tag: width: 1440 }}
					</div>
				</div>
			{% endfor %}
		</div>
	{% endif %}
</div>

{% schema %}
{
  "name": "main-slider",
  "blocks": [
    {
      "name": "slider-image",
			"type": "slide",
			"limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
					"label": "image"
        },
				{
					"type": "text",
					"id": "title",
					"label": "title",
					"default": "Titulo"
				},
				{
					"type": "text",
					"id": "subtitle",
					"label": "subtitle",
					"default": "Subtitulo"
				},
				{
					"type": "text",
					"id": "description",
					"label": "description",
					"default": "Descripcion"
				},
				{
					"type": "text",
					"id": "button",
					"label": "button",
					"default": "VER AHORA"
				},
				{
					"type": "url",
					"id": "link",
					"label": "link"
				}
      ]
    }
  ],
	"presets": [
    {
      "name": "Slideshow",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}