<div class="product-grid-container">
  <div class="grid-header">
    <h4 class="grid-subtitle">Featured Products</h4>
    <h1 class="grid-title">Nuestros Bestsellers</h1>
  </div>
  <div class="product-grid">
    {% for block in section.blocks %}
      {% render 'product-card', product: block.settings.product %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Product Grid",
  "settings": [
		{
			"type": "collection",
			"id": "collection",
			"label": "Collection"
		}
	],
  "blocks": [
    {
      "name": "Product",
      "type": "product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Product Link"
        }
      ]
    }
  ]
}
{% endschema %}
