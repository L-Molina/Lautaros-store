<footer class="footer">
  <div class="footer-inner flex space-between">
    <div class="footer-left half">
			<h4 class="footer-title">
        {{ section.settings.brand_name }}
      </h4>
			{{ section.settings.footer_description }}
      {% for link in block.settings.menu_links.links %}
        <li>
          <a href="{{ link.handle }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </div>
    <div class="footer-right flex space-between half">
      <div class="footer-menu flex column half">
        {% for block in section.blocks %}
            <ul class="secondary-menu">
              <p>{{ block.settings.menu_links.title }}</p>
            </ul>
          </div>
          <div class="footer-menu flex column half">
            <ul>
              {% for block in section.blocks %}
                {% if block.settings.title == "twitter" %}
                  {% render 'icon-twitter' %}
                {% endif %}
                {% if block.settings.title == "facebook" %}
                  {% render 'icon-facebook' %}
                {% endif %}
                {% if block.settings.title == "instagram" %}
                  {% render 'icon-instagram' %}
                {% endif %}
              {% endfor %}
            </ul>
          </div>
      {% endfor %}
      <small className='website-rights'>Â© 2023, Lautaro's Store Powered by Shopify</small>
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "text",
        "id": "brand_name",
        "label": "Brand Name",
        "default": "BrandName"
      }, {
        "type": "text",
        "id": "footer_description",
        "label": "Description",
        "default": "Description"
      }
    ],
    "blocks": [
      {
        "type": "footer_menu",
        "name": "Menu Links",
        "limit": 3,
        "settings": [
          {
            "type": "link_list",
            "id": "menu_links",
            "label": "Links"
          }
        ]
      }, {
        "type": "footer_social",
        "name": "Social",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Social Title"
          }, {
            "type": "url",
            "id": "link",
            "label": "Social Link"
          }
        ]
      }
    ]
  }
{% endschema %}

    