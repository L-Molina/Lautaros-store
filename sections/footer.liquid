<footer class="footer">
  <div class="footer-container">
    <div class="title-description">
      <h4 class="footer-title">
        {{ section.settings.brand_name }}
      </h4>
      <h5 class="footer-description">
        {{ section.settings.footer_description }}
      </h5>
    </div>
    <div class="social-menu">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'footer_social' %}
              {% if block.settings.title == "twitter" %}
                <a href="{{ link.handle }}" class="social-icon">
                  {% render 'icon-twitter' %}
                </a>  
              {% endif %}
              {% if block.settings.title == "facebook" %} 
                <a href="{{ link.handle }}" class="social-icon">
                  {% render 'icon-facebook' %}
                </a>  
              {% endif %}
              {% if block.settings.title == "instagram" %}
                <a href="{{ link.handle }}" class="social-icon">
                  {% render 'icon-instagram' %}
                </a>  
              {% endif %}
          {% when 'footer_menu' %} 
            <div class="footer-menu">
              <ul class="secondary-menu">
                <h3 class="menu-title">{{ block.settings.menu_links.title}}</h3>
                  {% for link in block.settings.menu_links.links %}
                      <li>
                        <a href="{{ link.handle }}" class="menu-link">
                          {{ link.title }}
                        </a>
                      </li>
                  {% endfor %}
              </ul>
            </div>
          {% endcase %}
        {% endfor %}
      </div>	
    </div>
    <div class="website-rights">
      <small>Â© 2023, Lautaro's Store Powered by Shopify</small>
    </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "text",
        "id": "brand_name",
        "label": "Brand Name",
        "default": "BrandName"
      }, {
        "type": "text",
        "id": "footer_description",
        "label": "Description",
        "default": "Description"
      }
    ],
    "blocks": [
      {
        "type": "footer_menu",
        "name": "Menu Links",
        "limit": 3,
        "settings": [
          {
            "type": "link_list",
            "id": "menu_links",
            "label": "Links"
          }
        ]
      }, {
        "type": "footer_social",
        "name": "Social",
        "limit": 3,
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Social Title"
          }, {
            "type": "url",
            "id": "link",
            "label": "Social Link"
          }
        ]
      }
    ]
  }
{% endschema %}

    