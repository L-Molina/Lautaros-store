<footer class="footer">
  <div class="footer-inner flex space-between">
    <div class="footer-left half">
			{% if section.settings.footer_logo != null %}
      	{{ section.settings.footer_logo | image_url: width: 500 | image_tag: width: 500 }}
			{% else %}
      <img class="lautaros-store-logo" src="../assets/lautaros-store-low-resolution-logo-black-on-transparent-background.png" alt="Logo">
			{% endif %}
			{{ section.settings.footer_description }}
      {% for link in block.settings.menu_links.links %}
        <li>
          <a href="{{ link.handle }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </div>
    <div class="footer-right flex space-between half">
      <div class="footer-menu flex column half">
        {% for block in section.blocks %}
            <ul class="secondary-menu">
              <p>{{ block.settings.menu_links.title }}</p>
            </ul>
          </div>
          <div class="footer-menu flex column half">
            <ul>
              {% if has_social_icons == true %}
                  {% for block in section.blocks %}
                  <li>
                    <a href="{{ block.settings.link }}">{{ block.settings.title }}</a>
                  </li>
                {% endfor %}
              {% endif %}
            </ul>
          </div>
      {% endfor %}
      <small className='website-rights'>Â© 2023, Lautaro's Store Powered by Shopify</small>
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "image_picker",
        "id": "footer_logo",
        "label": "Logo"
      }, {
        "type": "text",
        "id": "footer_description",
        "label": "Description",
        "default": "Description"
      }
    ],
    "blocks": [
      {
        "type": "footer_menu",
        "name": "Menu Links",
        "limit": 3,
        "settings": [
          {
            "type": "link_list",
            "id": "menu_links",
            "label": "Links"
          }
        ]
      }, {
        "type": "footer_social",
        "name": "Social",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Social Title"
          }, {
            "type": "url",
            "id": "link",
            "label": "Social Link"
          }
        ]
      }
    ]
  }
{% endschema %}

    