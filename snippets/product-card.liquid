<a href="{{ link.handle }}"> 
	<div class="product-card">
		<div class="product-image">
		  {{ product | image_url : width : 239 | image_tag : width : 239 }}
		</div>
		<p class="product-collection">
		  {{ product.collection }}
		</p>
		<h4 class="product-title">
		  {{ product.title }}
		</h4>
		<p class="product-price">
		  {{ product.price | money }}
		</p>
	</div>	  
</a>
